{
  "name": "dota2-game-coordinator-service",
  "version": "1.0.2-alpha.1",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p . && cp -f -r src/lib server",
    "watch": "tsc -w src/**  --outDir server",
    "test": "cross-env PORT=3000 HOST=localhost ENV_LABEL=localhost LOG_LEVEL=debug CLOUD_CONFIG_URL=http://dev-mesos-agent-09.weplay.space:38888 node --inspect node_modules/.bin/jest --watch",
    "pretest": "npm run build",
    "dev": "cross-env PORT=3000 HOST=localhost SERVICE_NAME=dota2-game-coordinator-service ENV_LABEL=localhost LOG_LEVEL=debug CLOUD_CONFIG_URL=http://dev-mesos-agent-09.weplay.space:38888 nodemon --inspect server/index.js",
    "start": "node server/index.js",
    "node-lib-build": "lerna run build --scope=weplay-node-* --stream --parallel",
    "node-lib-watch": "lerna run watch --scope=weplay-node-* --stream --parallel",
    "build-with-lib": "npm-run-all --parallel node-lib-build build ",
    "watch-with-lib": "npm-run-all --parallel node-lib-watch watch ",
    "debug": "yarn build-with-lib && npm-run-all --parallel watch-with-lib dev"
  },
  "dependencies": {
    "async-retry": "^1.3.1",
    "axios": "^0.18.1",
    "bytebuffer": "^5.0.1",
    "csv-parse": "^4.8.5",
    "deferred": "^0.7.11",
    "express": "^4.17.1",
    "lodash": "^4.17.15",
    "long": "^4.0.0",
    "merge": "^1.2.1",
    "protobufjs": "5.0.1",
    "steam": "^1.4.1",
    "weplay-node-cloud-config": "^1.0.14",
    "weplay-node-logger": "^1.0.14",
    "weplay-node-registration": "^1.0.14",
    "weplay-node-rmq": "^1.0.14",
    "weplay-node-shutdown": "^1.0.14",
    "winston": "^3.2.1"
  },
  "engines": {
    "node": ">=12"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --ext .js,.jsx,.ts,.tsx",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-typescript": "^6.3.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-eslint": "^9.0.1",
    "prettier-eslint-cli": "^5.0.0",
    "supertest": "^4.0.2",
    "typescript": "^3.8.3"
  }
}
